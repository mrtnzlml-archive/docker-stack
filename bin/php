#!/usr/bin/env bash

DOCKER_COMPOSE_FILE="$(dirname $(readlink -f $0))/../docker-compose.yml"
WORK_DIR=$(echo $PWD | sed 's?/home/martin/Work?/var/www?')

if [[ -f "$1" || -d "$1" ]]; then # first argument is a file or directory
    ARGUMENT=$WORK_DIR/"$@"
else
	ARGUMENT="$@"
fi

docker-compose --file $DOCKER_COMPOSE_FILE exec php-fpm php $ARGUMENT
